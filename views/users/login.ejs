<%layout("layouts/boilerPlate")-%>
<body>
    <div class="d-flex justify-content-center align-items-center">
        <div class="container form-container">
            <form id="user-login" method="POST" action="/user/login" novalidate class="needs-validation">
                <div class="row form-group form-header">
                    <h2>Login</h2>
                </div>
                <div class="row form-group">
                    <div class="col-md-12 col">
                        <input id="username" class="form-control" type="text" placeholder="username..." name="username" maxlength="20" required>
                        <div class="invalid-feedback">Please enter your username</div>
                    </div>
                </div>
                
                <div class="row form-group">
                    <div class="col-md-12 col">
                        <input id="password" class="form-control" type="password" placeholder="password..." name="password" required>
                        <div class="invalid-feedback">Please enter a valid password</div>
                    </div>
                </div>
                
                <div class="row">
                    <button class="submit-btn" type="submit">Login</button>
                </div>
                <div class="row pt-2">
                    <a class="col col-6 text-start" href="/user/signup">create account</a>
                    <a class="col col-6 text-end" href="/user/forgot">forgot password?</a>
                </div>
            </form>
        </div>
    </div>

    <script src="/JavaScript/formValidation.js"></script>
</body>