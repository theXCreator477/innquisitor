<%layout("layouts/boilerPlate")-%>
<body>
    <div class="d-flex justify-content-center align-items-center">
        <div class="container form-container new-listing-form">
            <form enctype="multipart/form-data" id="add-new" method="POST" action="/listing/new" novalidate class="needs-validation">
                <div class="row form-group">
                    <h2>Fill the Details</h2>
                </div>
                <div class="row form-group">
                    <div class="col-md-12 col">
                        <input id="title" class="form-control" type="text" placeholder="Hotel Name..." name="listing[title]" maxlength="50" required>
                        <div class="invalid-feedback">Please choose a title</div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-12 col">
                        <textarea id="description" class="form-control" rows="" cols="" placeholder="Description..." name="listing[description]" minlength="50" maxlength="1000"></textarea>
                        <div class="invalid-feedback">Description must be 50-1000 characters</div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6 col col-12">
                        
                        <input class="form-control" id="img" type="file" name="listing[image]" required multiple>
                        <label for="img"><i style="opacity: 0.75; font-size: 0.75rem; white-space: nowrap;">&nbsp;Maximum 5 images can be uploaded.</i></label>
                        <div class="invalid-feedback">Image is required.</div>
                    </div>
                    <div class="form-group col-md-6 col col-12">
                        <input class="form-control" type="number" name="listing[price]" placeholder="Price per night..." required min="1000">
                        <div class="invalid-feedback">Please set a valid price</div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6 col col-12">
                        <input class="form-control" type="text" name="listing[location]" placeholder="City/Town..." required>
                        <div class="invalid-feedback">Please enter a valid city</div>
                    </div>
                    <div class="form-group col-md-6 col col-12">
                        <input class="form-control" type="text" name="listing[country]" placeholder="Country..." required>
                        <div class="invalid-feedback">Please enter a valid country</div>
                    </div>
                </div>
                <div class="row form-group">
                    <label style="font-style: italic; opacity: 0.8; font-size: 0.85rem; margin-bottom: 0.25rem;" for="">Select categories:</label>
                    <div class="col-md-12 col">
                        <div class="categories-container">
                            <%-include("../includes/categories")%>
                        </div>
                        <div class="invalid-feedback category-feedback">Choose atleast one category.</div>
                    </div>
                </div>
                <div class="row">
                    <button class="submit-btn" type="submit">Upload</button>
                </div>
            </form>
        </div>
    </div>


    <script src="/JavaScript/formValidation.js"></script>
    
</body>
